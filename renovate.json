{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":timezone(Asia/Tokyo)",
    ":automergeMinor",
    "group:allNonMajor"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "before 7am on the first day of the month"
  ],
  "automergeSchedule": [
    "before 7am"
  ],
  "commitMessagePrefix": ":wrench:",
  "pruneBranchAfterAutomerge": true,
  "rangeStrategy": "pin"
}
